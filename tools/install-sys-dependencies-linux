#!/bin/bash

set -e

# build-essential clang-14 libc++-dev libc++abi-dev ruby-full cmake
sudo apt-get update && sudo apt-get install ninja-build lcov rustc --fix-missing

mkdir -p build/local
wget https://apt.llvm.org/llvm.sh -P build/local
chmod +x build/local/llvm.sh
sudo build/local/llvm.sh 14

sudo apt-get update && sudo apt-get install clang-tidy-14

sudo add-apt-repository 'deb http://archive.ubuntu.com/ubuntu jammy main'
sudo apt -t jammy install libboost-all-dev
